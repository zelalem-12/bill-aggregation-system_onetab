        "response.OverdueBillResponse": {
            "type": "object",
            "properties": {
                "amount_due": {
                    "type": "number"
                },
                "bill_id": {
                    "type": "string"
                },
                "due_date": {
                    "type": "string"
                }
            }
        },
        "response.PaymentHistoryResponse": {
            "type": "object",
            "properties": {
                "amount": {
                    "type": "number"
                },
                "bill_id": {
                    "type": "string"
                },
                "due_date": {
                    "type": "string"
                },
                "paid_date": {
                    "type": "string"
                }
            }
        },
        "response.SuccessResponse": {
            "type": "object",
