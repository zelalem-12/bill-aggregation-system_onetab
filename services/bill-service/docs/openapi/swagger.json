                "provider_id",
                "status",
                "user_id"
            ],
            "properties": {
                "amount": {
                    "type": "number"
                },
                "due_date": {
                    "type": "string"
                },
                "provider_id": {
                    "type": "string"
                },
                "status": {
                    "type": "string",
                    "enum": [
                        "paid",
                        "unpaid"
                    ]
                },
                "user_id": {
                    "type": "string"
                }
            }
        },
        "response.BillResponse": {
