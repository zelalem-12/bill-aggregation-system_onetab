            "get": {
                "description": "Fetch all bills from a specific provider",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "Bills"
                ],
                "summary": "Fetch all bills from a specific provider",
                "parameters": [
                    {
                        "type": "string",
